{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2015", "es2017", "es2018", "esnext", "dom"],
    "jsx": "react-native",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["src/**/*", "index.js"],
  "exclude": ["node_modules"]
}

